<h1>Lista de usuarios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">Nombre</th>
      <th class="text-center">Apellidos</th>
      <th class="text-center">Teléfono</th>
      <th class="text-center">Cédula</th>
      <th class="text-center">Oficina</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td align="center"><%= user.first_name %></td>
        <td align="center"><%= user.last_name %></td>
        <td align="center"><%= user.phone %></td>
        <td align="center"><%= user.id_number %></td>
        <td align="center"><%=  %></td>
        <td align="center"><%= link_to 'Mostrar', user %></td>
        <td align="center"><%= link_to 'Editar', edit_user_path(user) %></td>
        <td align="center"><%= link_to 'Borrar', user, method: :delete, data: { confirm: 'Está seguro de borrar este usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

